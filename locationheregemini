6) assets/js/main.js
/* assets/js/main.js
   وظائف:
   - تفعيل زر القائمة على الهواتف
   - سلاسة التمرير
   - إرسال نموذج contact.html إلى Google Forms (fetch ثم iframe كاحتياطي)
*/

document.addEventListener('DOMContentLoaded', function () {
  // تفعيل زر القائمة (hamburger) لجميع الصفحات
  document.querySelectorAll('.nav-toggle').forEach(btn => {
    btn.addEventListener('click', function () {
      // نحاول إيجاد ul مجاور
      const parent = btn.closest('.main-nav') || document;
      const ul = parent.querySelector('.nav-list');
      if (!ul) return;
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', !expanded);
      ul.style.display = expanded ? '' : 'flex';
    });
  });

  // smooth scroll للروابط الداخلية
  document.querySelectorAll('a[href^="#"]').forEach(a => {
    a.addEventListener('click', function (e) {
      const href = a.getAttribute('href');
      if (href.length > 1) {
        e.preventDefault();
        const target = document.querySelector(href);
        if (target) target.scrollIntoView({behavior: 'smooth', block: 'start'});
      }
    });
  });

  // FORM: محاولة إرسال بيانات Google Forms
  const form = document.getElementById('request-form');
  if (form) {
    const status = document.getElementById('form-status');
    form.addEventListener('submit', function (e) {
      status.hidden = true;
      status.textContent = '';
      // منع الإرسال الافتراضي حتى نقوم بالتحقق
      e.preventDefault();

      // التحقق البسيط
      const name = document.getElementById('name');
      const phone = document.getElementById('phone');
      if (!name.value.trim() || !phone.value.trim()) {
        status.hidden = false;
        status.textContent = 'الرجاء إدخال الاسم ورقم الهاتف.';
        return;
      }

      // ربط Action وحقول النموذج (مخفيّة هنا: استخدم action المباشر الموجود في form)
      const action = form.action;
      // قراءة عناصر النموذج وتحويلها لـ x-www-form-urlencoded
      const data = new URLSearchParams(new FormData(form)).toString();

      // 1) نحاول الإرسال عبر fetch (قد يفشل بسبب CORS)
      fetch(action, {
        method: 'POST',
        mode: 'no-cors', // 'no-cors' يبقي الطلب بسيط لكن لا نتحقق من الاستجابة
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8'
        },
        body: data
      }).then(() => {
        // في وضع no-cors لا نستطيع معرفة النتيجة، لكن نسمّيها نجاحاً
        status.hidden = false;
        status.textContent = 'تم إرسال الطلب — شكراً! سنتواصل معك قريباً.';
        form.reset();
      }).catch(() => {
        // إذا فشل fetch فعليًا، نستخدم iframe كاحتياطي (form already has target=hidden_iframe)
        try {
          form.submit();
          status.hidden = false;
          status.textContent = 'تم إرسال الطلب — شكراً! (تم الإرسال باستخدام طريقة احتياطية)';
          form.reset();
        } catch (err) {
          status.hidden = false;
          status.textContent = 'حدث خطأ أثناء إرسال الطلب. استخدم واتساب أو الاتصال.';
        }
      });
    });
  }

  // year in footer
  const y = document.getElementById('year');
  if (y) y.textContent = new Date().getFullYear();
});
تعليمات سريعة لإعداد Google Forms (الجزء العملي)
افتح نموذجك في Google Forms.

انقر على النقاط الثلاث → Get pre-filled link أو افتح تبويب المشاركة وانسخ رابط الـ formResponse في قالب:

https://docs.google.com/forms/d/e/GOOGLE_FORM_ID/formResponse
قيمة GOOGLE_FORM_ID هي المعرف الطويل في الرابط. انسخها واستبدلها في contact.html بدل GOOGLE_FORM_ID.

لمعرفة أسماء الحقول (entry.123456789):

افتح مصدر صفحة النموذج (عرض النموذج).

اعثر على عناصر الإدخال input أو textarea وستجد أسماء مثل name="entry.123456789".

انسخ هذه القيم واستبدلها في contact.html عند name="entry.1111111111" و entry.2222222222 وهكذا حسب ترتيبك.

اختبر الإرسال: افتح contact.html في المتصفح، املأ الحقول ثم اضغط إرسال. (قد لا تظهر رسالة تأكيد من Google بسبب no-cors، لكن بيانات النموذج تصل عادة عند استخدام formResponse endpoint).

ملحوظات ونصائح
إن أردت، أستطيع:

توليد نسخة مضغوطة ZIP جاهزة للتحميل.

ربط النموذج بقاعدة بيانات (PHP/Node) بدلاً من Google Forms.

إضافة لوحة إدارة لقراءة الطلبات أو إرسال إشعارات بريد/واتساب تلقائية.

تخصيص الألوان والصور والشعار بما يناسب هويتك.

إن واجهت مشكلة في إرسال Google Forms (CORS أو عدم وصول البيانات)، أقدّم لك ملف PHP بسيط (خادم) يتلقى POST ويعيد توجيه بياناتك إلى Google Forms (proxy) بطريقة موثوقة.

هل تريد أن أجهّز لك نسخة ZIP جاهزة للاستخدام بما فيها كل الملفات المذكورة، أو أعدّل الألوان/الخطوط/الصور الآن؟

