contact_php = r"""<?php
// contact.php
$feedback = "";
if ($_SERVER["REQUEST_METHOD"] === "POST") {
    // Sanitize input
    $name = trim(filter_input(INPUT_POST, 'name', FILTER_SANITIZE_SPECIAL_CHARS));
    $email = trim(filter_input(INPUT_POST, 'email', FILTER_SANITIZE_EMAIL));
    $phone = trim(filter_input(INPUT_POST, 'phone', FILTER_SANITIZE_SPECIAL_CHARS));
    $message = trim(filter_input(INPUT_POST, 'message', FILTER_SANITIZE_SPECIAL_CHARS));
    $time = date('Y-m-d H:i:s');
    $ip = $_SERVER['REMOTE_ADDR'] ?? 'unknown';

    if ($name && $email && $phone && $message) {
        $file_exists = file_exists("messages.csv");
        if (($fp = fopen("messages.csv", "a")) !== false) {
            if (!$file_exists) {
                fputcsv($fp, ['name','email','phone','message','time','ip']);
            }
            fputcsv($fp, [$name, $email, $phone, $message, $time, $ip]);
            fclose($fp);
            $feedback = "تم إرسال طلبك بنجاح! سنعاود الاتصال بك قريبًا.";
        } else {
            $feedback = "تعذر حفظ الرسالة. حاول لاحقًا.";
        }
    } else {
        $feedback = "الرجاء تعبئة جميع الحقول بشكل صحيح.";
    }
}
?>
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>اتصل بنا - يستبشرون</title>
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;800&display=swap&subset=arabic" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container flex between align-center">
      <a href="index.html" class="brand">يستبشرون</a>
      <button class="burger" aria-label="قائمة"><span></span><span></span><span></span></button>
      <ul class="nav-links">
        <li><a href="index.html">الرئيسية</a></li>
        <li><a href="services.html">الخدمات</a></li>
        <li><a href="about.html">من نحن</a></li>
        <li><a href="contact.php" class="active">اتصل بنا</a></li>
      </ul>
    </div>
  </nav>

  <header class="page-header">
    <div class="container">
      <h1 data-aos="fade-up">اتصل بنا</h1>
      <p data-aos="fade-up" data-aos-delay="150">املأ النموذج وسيقوم فريقنا بالتواصل معك</p>
    </div>
  </header>

  <main class="container">
    <section class="contact-card" data-aos="fade-up">
      <form action="contact.php" method="post" id="contactForm">
        <div class="grid-2">
          <input type="text" name="name" placeholder="الاسم الكامل" required>
          <input type="email" name="email" placeholder="البريد الإلكتروني" required>
        </div>
        <input type="tel" name="phone" placeholder="رقم الهاتف" required pattern="[0-9 +]+" title="أرقام ومسافة وعلامة + فقط">
        <textarea name="message" placeholder="أخبرنا بما تحتاجه" required></textarea>
        <button type="submit" class="btn btn-primary">إرسال</button>
      </form>
      <?php if (!empty($feedback)) : ?>
        <p class="feedback"><?php echo htmlspecialchars($feedback, ENT_QUOTES, 'UTF-8'); ?></p>
      <?php endif; ?>
    </section>
    <aside class="contact-aside" data-aos="zoom-in">
      <h3>معلومات التواصل</h3>
      <p>📍 ترانسيت – قبالة سوبر ماركت الخيرات</p>
      <p>📞 090 268 5622</p>
      <p>✉️ info@example.com</p>
    </aside>
  </main>

  <footer class="footer">
    <div class="container flex between align-center">
      <p>© 2025 يستبشرون</p>
      <a class="btn btn-ghost" href="tel:0902685622">اتصل الآن</a>
    </div>
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script> AOS.init(); </script>
  <script src="js/main.js"></script>
</body>
</html>
"""

admin_php = r"""<?php
// admin.php
session_start();
$correct = 'alitpreed0909';

if (isset($_POST['logout'])) {
    session_destroy();
    header('Location: admin.php'); exit;
}

if (!isset($_SESSION['loggedin'])) {
    if ($_SERVER['REQUEST_METHOD'] === 'POST') {
        $pass = $_POST['password'] ?? '';
        if ($pass === $correct) {
            $_SESSION['loggedin'] = true;
            header('Location: admin.php'); exit;
        } else {
            $error = "Invalid password.";
        }
    }
    ?>
    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Admin Login</title>
      <link rel="stylesheet" href="css/style.css">
    </head>
    <body class="admin">
      <div class="admin-login">
        <h2>Admin Login</h2>
        <?php if (!empty($error)) echo '<p class="error">'.$error.'</p>'; ?>
        <form method="post">
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
    </body>
    </html>
    <?php
    exit;
}

// Logged in: show table
$rows = [];
if (file_exists("messages.csv")) {
    if (($h = fopen("messages.csv", "r")) !== false) {
        while (($row = fgetcsv($h)) !== false) {
            $rows[] = $row;
        }
        fclose($h);
    }
}
?>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body class="admin">
  <div class="admin-header">
    <h1>Messages (CSV)</h1>
    <form method="post"><button class="btn btn-ghost" name="logout">Logout</button></form>
  </div>
  <div class="admin-tools">
    <input type="text" id="search" placeholder="Search by text...">
    <select id="col">
      <option value="all">All Columns</option>
      <option value="0">Name</option>
      <option value="1">Email</option>
      <option value="2">Phone</option>
      <option value="3">Message</option>
      <option value="4">Time</option>
      <option value="5">IP</option>
    </select>
    <button class="btn btn-sm" id="downloadCsv">Download CSV</button>
  </div>
  <div class="table-wrap">
    <table id="msgTable">
      <thead>
        <?php
          if (!empty($rows)) {
            echo '<tr>';
            foreach ($rows[0] as $th) echo '<th>'.htmlspecialchars($th).'</th>';
            echo '</tr>';
          }
        ?>
      </thead>
      <tbody>
        <?php
          for ($i=1; $i<count($rows); $i++) {
            echo '<tr>';
            foreach ($rows[$i] as $cell) echo '<td>'.htmlspecialchars($cell).'</td>';
            echo '</tr>';
          }
        ?>
      </tbody>
    </table>
  </div>

  <script src="js/admin.js"></script>
</body>
</html>
"""

